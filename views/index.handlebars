
<h1>eat da burger</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
      <button class='change-devoured' data-id="{{id}}">devoured</button>
    </li>
      {{!-- {{ burgers/burger_name-block devoured=false }} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>{{burger_name}}</li>
      {{!-- {{ burgers/burger_name-block devoured=true }} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name</label>
    <input type="text" id="burger" name="author">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>





